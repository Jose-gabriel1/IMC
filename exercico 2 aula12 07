#include <iostream>
#include <ctime>
#include <cstdlib>
#include <locale.h>
using namespace std;

int main () {
    
    setlocale(LC_ALL,"Portuguese");
    srand(time(0));
    
    system ("color 2");

    int i, n;

  for(i=1; i <= 10; i++) {

    n = rand()%10;
    cout << n << "\n";
    if(n%2 == 0){
        break;
    }

   }

   return 0;

}
