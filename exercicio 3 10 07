        cout << "O triângulo é escaleno " << endl;
     }


     if ( a > b && a > c && c > b ) {

        cout << "O triângulo é escaleno " << endl;
     }


     if ( b > a && b > c && a > c ) {

        cout << "O triângulo é escaleno " << endl;
     }

     if ( b > a && b > c && c > a ) {

        cout << "O triângulo é escaleno " << endl;
