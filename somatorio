#include <iostream>

int main() {
    int somatorio = 0;

    for (int i = 1; i <= 10; i++) {
        somatorio += i;
    }

    std::cout << "O somatório de 1 a 10 é: " << somatorio << std::endl;

    return 0;
}
    
    
    
     #include <iostream>

int main() {
    int somatorio = 0;
    int i = 1;

    while (i <= 10) {
        somatorio += i;
        i++;
    }

    std::cout << "O somatório de 1 a 10 é: " << somatorio << std::endl;

    return 0;
}
