#include <iostream>
#include <locale.h>
#include <unistd.h>
#include <cstdlib>
#include <cmath>
#include <ctime>
using namespace std;

int main () {

    setlocale(LC_ALL, "Portuguese");

    float a, b, c;

    cout << "digite a medida 1: ";
    cin >> a;
    cout << "digite a medida 2: ";
    cin >> b;
    cout << "digite a medida 3: ";
    cin >> c;

   
   while
   
   
   
   
   
   
   
   if ( a < b+c && b < a+c && c < a+b){
       cout << "O triângulo existe!!!" << endl;


    if ( a == b && a == c && b == c) {

        cout << "O triangulo é equilátero " << endl;
    }

    if ( a == b && a == c && b > c) {

        cout << "O triângulo é isósceles " << endl;
    }

 }
   else
    cout << "O triângulo não existe!!" << endl;
return 0;




}
