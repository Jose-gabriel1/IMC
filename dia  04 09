#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;
int main() {
    srand(time(0));
    int cont = 0,num;
    int neg_count = 0;
    for (int i = 0; i < 1000; i++) {
        int num = -100 + rand() % 201 ;
        cout << num << endl;
        cont++;
        if (num < 0) {
            neg_count++;
            if (neg_count == 100) {
                break;
            }
        }
    }
    cout << "Total de nÃºmeros gerados: " << cont << std::endl;
    return 0;
}
