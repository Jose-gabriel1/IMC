#include<iostream>
#include<cmath>
using namespace std;

int main() {

    system ("color f0");
    float peso, altura, sexo, imc;


    cout << "\nDigite seu peso: ";
    cin >> peso;
    cout << "\nDigite sua altura: ";
    cin >> altura;
    cout << "\nDigite o seu sexo (DIGITE 1 PARA FEMININO E 2 PARA MASCULINO):  ";
    cin >> sexo;

    imc = peso / pow(altura , 2);

    cout << "\nSeu IMC eh: " << imc << endl;


      if ( sexo == 1 ){

            if ( imc < 18.5){
                cout << "magreza";
            }

            if ( imc >= 18.5 && imc <= 23.9) {

              cout << "normal";
            }

            if ( imc >= 24 && imc <= 28.9) {

              cout << "sobrepeso";
            }

            if ( imc >= 29 && imc <= 34.9) {

              cout << "obesidade grau 1";
            }

            if ( imc >= 35 && imc <= 39.9) {

              cout << "obesidade grau 2";
            }

            if ( imc > 40) {

              cout << "obesidade grau 3";
            }
      }

      else{
     if ( sexo == 2 ){

            if ( imc < 18.5){
                cout << "magreza";
            }

            if ( imc >= 18.5 && imc <= 24.9) {

              cout << "normal";
            }

            if ( imc >= 25 && imc <= 29.9) {

              cout << "sobrepeso";
            }

            if ( imc >= 30 && imc <= 34.9) {

              cout << "obesidade grau 1";
            }

            if ( imc >= 35 && imc <= 39.9) {

              cout << "obesidade grau 2";
            }

            if ( imc > 40) {

              cout << "obesidade grau 3";
            }
      }
      }





}
